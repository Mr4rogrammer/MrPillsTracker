<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:paddingVertical="@dimen/view_vertical_spacing"
    android:paddingHorizontal="@dimen/view_horizontal_spacing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashBoard.presenter.ui.DashBoard">

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <RelativeLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
              android:includeFontPadding="false"
              android:textColor="@color/grey"
              android:text="Hey Sasha!"
              android:id="@+id/name"
              android:textSize="16sp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

          <ImageView
              android:layout_alignParentEnd="true"
              android:src="@drawable/two_dot"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

      </RelativeLayout>


      <LinearLayout
          android:layout_marginTop="5dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
              android:textStyle="bold"
              android:textColor="@color/dark_blue"
              android:textSize="34sp"
              android:text="Thuesday"
              android:id="@+id/day"
              android:includeFontPadding="false"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

          <ImageView
              android:layout_marginStart="7dp"
              android:layout_gravity="center_vertical"
              android:src="@drawable/down_arrow"
              android:layout_width="18dp"
              android:layout_height="wrap_content"/>

      </LinearLayout>

  </LinearLayout>
</RelativeLayout>